class Solution:
    def reverse(self, x: int) -> int:
        y = x
        res = 0
        mul = 1
        if x < 0:
            mul = -1
            y *= -1
        while y != 0:
            res = res * 10
            res += y % 10
            y = y // 10
        res *= mul
        if res > 2147483647 or res < -2147483648:
            return 0
        return res
